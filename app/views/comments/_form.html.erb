<%= simple_form_for([category_submission, category_submission.comments.build], html: { class: "form-inline"}) do |f| %>
  <div class="form_group">
    <%= f.input :body, label: false, html: {cols: 5, class: "form-control"}, placeholder: "Type your comment here ..." %>
  </div>
  <%= f.submit "Reply", class: "btn btn-primary btn-sm float-sm-right" %>
<% end %>
