<%= current_user.email %>
<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Submission</li>
        </ol>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <!-- /.card -->
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">Request Form</h3>
            <%= link_to new_submission_path, class: "btn btn-secondary float-sm-right" do %>
              <i class="fas fa-square-plus"></i>
              <em> Add </em>
            <% end %>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>Requestor</th>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Published?</th>
                  <th>Status</th>
                  <th>Operation</th>
                </tr>
              </thead>
              <tbody>
                <% @submissions.each do |subm| %>
                  <tr>
                    <td><%= subm.user.first_name.titleize %></td>
                    <td><%= subm.title.titleize %></td>
                    <td><%= subm.description %></td>
                    <td>
                      <% if subm.published? %>
                        <i class="fas fa-thumbs-up"></i>
                      <% else %>
                        <i class="nav-icon fas fa-thumbs-down"></i>
                      <% end %>
                    </td>
                    <td><%= subm.status.titleize %></td>
                    <td>
                      <%= link_to submission_path(subm) do %>
                        <i class="nav-icon fas fa-eye"></i>
                      <% end %> | <%= link_to subm, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                        <i class="nav-icon fas fa-trash-can"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
