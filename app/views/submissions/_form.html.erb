<%= simple_form_for(@submission) do |f| %>
  <div class="card-body">
    <div class="row">
      <div class="form-group col-md-4">
        <%= f.association :category, as: :select, prompt: "Please Select", input_html: { class: 'form-select' } %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :date_required, as: :string, input_html: { class: 'date form-control', placeholder: "Click Here", data: { controller: 'flatpickr' }} %>
      </div>
      <div class="form-group col-md-4">
        <%= f.input :contact_person, input_html: { class: 'form-control', placeholder: placeholder } %>
      </div>
    </div>
    <hr class="hr" />
    <div class="row">
      <div class="form-group">
        <%= f.input :title, input_html: { class: 'form-control', placeholder: placeholder } %>
      </div>
      <%= f.input :description, as: :rich_text_area, input_html: { class: 'form-control auto-height-text', placeholder: placeholder } %>
    </div>
    <hr class="hr" />
    <div class="row">
      <div class="form-group col-md-6 only-for-hardware">
        <%= f.input :quantity, input_html: { class: 'form-control', placeholder: placeholder } %>
      </div>
      <div class="form-group col-md-6">
        <%= f.input :unit, input_html: { class: 'form-control', placeholder: placeholder } %>
      </div>
    </div>
  </div>
  <div class="card-footer">
    <%= link_to "Back", submissions_path, class:"btn btn-secondary" %>
    <%= f.button :submit, "Save", class:"btn btn-primary" %>
  </div>
<% end %>
