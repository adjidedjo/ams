<!-- Content Header (Page header) -->
<section class="content-header">
  <div class="container-fluid">
    <div class="row mb-2">
      <div class="col-sm-6">
        <h1></h1>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active">Request Categories</li>
        </ol>
      </div>
    </div>
  </div>
  <!-- /.container-fluid -->
</section>
<section class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <!-- /.card -->
        <div class="card">
          <div class="card-header">
            <h3 class="card-title">List Request Form</h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>Applicant</th>
                  <th>Request Name</th>
                  <th>Addressed to</th>
                  <th>Status</th>
                  <th>Operation</th>
                </tr>
              </thead>
              <tbody>
                <% @category_submissions.each do |allcat| %>
                  <tr>
                    <td><%= allcat.user.full_name %></td>
                    <td><%= allcat.category.name %></td>
                    <td><%= allcat.category.unit.department.name %>-<%= allcat.category.unit.name %></td>
                    <td><%= allcat.published? ? "Approve" : allcat.status.humanize %></td>
                    <td>
                      <%= link_to category_submission_path(allcat.category, allcat) do %>
                        <i class="nav-icon fas fa-eye"></i>
                      <% end %> | 
                      <%= link_to category_submission_path(allcat.category, allcat), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
                        <i class="nav-icon fas fa-trash-can"></i>
                      <% end %> | 
                      <%= link_to category_submission_path(allcat.category, allcat, format: "pdf") do %>
                        <i class="nav-icon fas fa-file-pdf"></i>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
              <tfoot>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</section>
