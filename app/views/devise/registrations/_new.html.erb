<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class:"sign-up-form"}) do |f| %>
  <div class="heading">
    <h6></h6>
    <h5>Sign Up AMS</h5>
    <!--<a href="#" class="toggle">Sign up</a>-->
  </div>
  <div class="actual-form">
    <div class="input-wrap">
      <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first_name", class: "input-field", placeholder: "First Name" }%>
    </div>
    <div class="input-wrap">
      <%= f.input :middle_name,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "middle_name", class: "input-field" }%>
    </div>
    <div class="input-wrap">
      <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last_name", class: "input-field" }%>
    </div>
    <div class="input-wrap">
      <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email", class: "input-field" }%>
    </div>
    <div class="input-wrap">
      <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", class: "input-field" } %>
    </div>
    <div class="input-wrap">
      <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" , class: "input-field"} %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
